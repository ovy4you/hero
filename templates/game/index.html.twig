{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<body data-spy="scroll" data-target=".navbar" data-offset="60">
<div class="jumbotron text-center">
    <h1><?= $message??' Play Game ' ?></h1>
</div>
<div class="container">
    <h2>Round : {{ data.round }}</h2>
    {{ data.game|raw  }}
    <div class="row">
        <div class="col-md-12" align="center">
            <button type="button" class="btn btn-primary btn-lg" onClick="window.location.reload()">Play</button>
        </div>
    </div>
</div>
{% endblock %}
